<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                @if (Document.ContainsKey("Canonical"))
                {
                        <p class="text-center small text-muted">Originally published at <a
                        href="@Document.GetString("Canonical")">@Document.GetString("Canonical")</a>.</p>
                        <br />
                }
                <p class="copyright text-muted m-0">
                    <svg xmlns="http://www.w3.org/2000/svg" style="height:18px;width:18px;" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"
                            clip-rule="evenodd" />
                    </svg>
                    with
                    <svg xmlns="http://www.w3.org/2000/svg" style="height:18px;width:18px;" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                            clip-rule="evenodd" />
                    </svg>
                    by <b>Alexis C. Gridel</b>
                </p>
                <br />
                <ul class="list-inline text-center small">
                    @{
                        IDocument rssFeed = Outputs["**/*.rss"].FirstOrDefault();
                        IDocument atomFeed = Outputs["**/*.atom"].FirstOrDefault();
                    }
                    @if (rssFeed != null)
                    {
                            <li class="list-inline-item">
                                <a href="@Context.GetLink(rssFeed)"><i class="fa fa-rss"></i> RSS Feed</a>
                            </li>
                    }
                    @if (atomFeed != null)
                    {
                            <li class="list-inline-item">
                                <a href="@Context.GetLink(atomFeed)"><i class="fa fa-rss"></i> Atom Feed</a>
                            </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</footer>